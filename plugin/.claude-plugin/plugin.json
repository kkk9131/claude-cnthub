{
  "name": "claude-cnthub",
  "version": "0.1.0",
  "description": "Session management and AI memory for Claude Code. Captures session summaries, enables semantic search, and provides cross-session context injection.",
  "author": {
    "name": "kazuto"
  },
  "repository": "https://github.com/kkk9131/claude-cnthub",
  "license": "MIT",
  "keywords": [
    "session",
    "memory",
    "context",
    "summary",
    "hooks",
    "mcp",
    "search"
  ],
  "mcpServers": {
    "cnthub-session": {
      "command": "node",
      "args": ["${CLAUDE_PLUGIN_ROOT}/scripts/mcp-server.js"],
      "env": {
        "CNTHUB_API_URL": "http://localhost:3048"
      }
    }
  }
}

{
  "name": "claude-cnthub",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered session memory and context management for Claude Code",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:api": "bun run --filter @claude-cnthub/api dev",
    "dev:web": "bun run --filter @claude-cnthub/web dev",
    "build": "bun run --filter '*' build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf packages/*/dist packages/*/.turbo node_modules/.cache",
    "worker:start": "node plugin/scripts/worker-start.js",
    "worker:stop": "node plugin/scripts/worker-stop.js",
    "worker:status": "node plugin/scripts/worker-status.js"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.1.38",
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "sqlite-vec": "^0.1.7-alpha.2",
    "voyageai": "^0.1.0"
  }
}
